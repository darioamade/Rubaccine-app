        .showcase-loads-container
            .showcase-loads-container-nav
                .showcase-loads-container-nav-left
                    .description
                        p=`${girls.category}`  
                        p=`/ ${girls.subCategory}` 
                        p=`/ ${girls.categoryType}` 
                        p=`/ ${girls.name}`
                    .loader-text
                        span FREE DELIVERY ON ORDERS OVER &pound;150
                        // <span>FREE RETURNS ON ALL UK ORDERS</span>
                .showcase-loads-container-nav-right
                    .showcase-loads-container-nav-right-prev
