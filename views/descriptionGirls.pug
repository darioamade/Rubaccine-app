                            svg.icon-page
                                use(href='/img/sprite.svg#icon-keyboard_arrow_left')
                            p Previous
                        .line
                            p.vline
                    .showcase-loads-container-nav-right-back
                        a(href='/women/new')
                            p=` Back to ${girls.category}  New Arrivals` 

                    .showcase-loads-container-nav-right-next
                        .previous
                            p(style='cursor: pointer;') Next
                            svg.icon-page.icon-page-color.color-active
                                use(href='/img/sprite.svg#icon-keyboard_arrow_right')
                        .line
                            p.vline
            .showcase-loads-container-gallery
                .showcase-loads-container-gallery-left
                    //- +overviewBox()
                    each img, i in girls.images
                        .showcase-loads-container-gallery-left-content
                            img.image-gallery-left(src=`/img/${img}` alt=`${i + 1}`)
                .showcase-loads-container-gallery-right
                    .showcase-loads-container-gallery-right-details
                        p.new=girls.status
                        p.new-desc=girls.name
                        p.new-price
                            span(style='color: #000;')=`£${girls.price.toFixed(2)}  `
                            //- span(style='color: #a90808;')=`£${girls.price.toFixed(2)}  `
                            //- span  was
                            //- span=` £${girls.priceOld.toFixed(2)} `
                            //- span=` £${girls.priceOld.toFixed(2)} `

                        .box-img-prev
                            span.small-img
                                img.size-img-prev(src=`/img/${girls.imageCover}` alt='clothing')
                            span.small-img
                                each colors, i in girls.color
                                    p.text-color=`${colors}`
                                        //- p.text-color=` ${men.color} `
                    .showcase-loads-container-gallery-right-sizes
                        .boxes-sizes
                            each sizes in girls.size
                                //- .box-items-sizes.crossed UK 4
                                .box-items-sizes.borderBlack=`${sizes}`
                            //-     - if (!sizes ) ? .box-items-sizes.crossed=` UK ${sizes} ` : .box-items-sizes.borderBlack=` UK ${sizes} `
                            //-     //- .box-items-sizes.crossed=` UK ${sizes} `


                            // NOTES switch between crossed and border for avalibite
                        p.underline is your size out of stock?
                        if session.cart
                            p.text-color=`Make 3 payments of £${(session.cart.totalPrice.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2})/ 3).toFixed(2)}. Klarna. No fees.`
                                a.popupKlarna(href) Learn more
                        else
                            p.text-color
                            | Make 3 payments with Klarna. No fees. 
                            a.popupKlarna(href) Learn more
                        
   
                        .btn-and-like
                            //- - const prod= JSON.stringify(girls)
