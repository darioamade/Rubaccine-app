
extends base

block append head

block content
    .create-account
        form#formCreate.signin-account-container
            .signin-account-container-left
                p.text-main Sign In
                .form-email
                    //- input#first_name.create__field(type='name' placeholder='*Enter First Name' autofocus='' required='')
                    input#name.create__field(type='name' placeholder='*Enter Full Name' required='')
                    input#create_email.create__field(type='email' placeholder='*Enter Email Address' autofocus='' required='')
                    //- input.create__field(id='create_email*' type='email' placeholder='*Re-Enter Email ' autofocus='' required='')
            .signin-account-container-right
                .form-email
                    input#create_password.create__field(type='password' placeholder='*Enter Password' autofocus='' required='')
                    input#create_password_confirm.create__field( type='password' placeholder='*Re-Enter Password ' autofocus='' required='')
                .bill-address
                    input(type='checkbox' name='billAdress' value='billAdress')
                    label(for='billAdress') Subscribe to Rubaccine updates
                p.text-normal privice policy
                .create
                    a(href='/men')
                        button.btn-continue-field CREATE ACCOUNT

